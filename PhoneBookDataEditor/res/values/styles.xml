<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
  	<style name="TitleBarBackground">
       <item name="android:background">#2f1f22</item>
    
    </style>

	<style name="Main" parent="android:Theme">
	    <!-- <item name="android:windowTitleSize">50dp</item> -->
	     <item name="android:windowTitleBackgroundStyle">@style/TitleBarBackground</item>
	     <item name="android:windowTitleSize">56dip</item>
	     <item name="android:windowContentOverlay">@android:color/transparent</item>
	</style>
	<style name="NoTitle">
	    <item name="android:windowNoTitle">true</item>
	</style>
	<style name="ButtonBar">
	    <item name="android:paddingTop">0dip</item>
	    <item name="android:paddingLeft">0dip</item>
	    <item name="android:paddingRight">0dip</item>
	    <item name="android:paddingBottom">1dip</item>
	    <item name="android:background">@drawable/button_bar_bk</item>
	</style>
	<style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
   		<item name="android:button">@layout/selector_checkbox</item>
   		<item name="android:paddingLeft">25.0dip</item>
   		<item name="android:maxHeight">10.0dip</item>
   </style>
</resources>
