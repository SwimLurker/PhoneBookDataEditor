<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_editseatpos"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:visibility="visible" 
    >
   	
     <TextView
         android:id="@+id/textview_editseatpos_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:text="@string/title_edit_seat" 
        android:textSize="16dp"/>
     <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_alignParentRight="true"
	    android:orientation="horizontal" >
	     <ImageButton
	        android:id="@+id/imagebtn_editseatpos_confirm"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:layout_marginRight="1dp"
	        android:background="@layout/selector_btn_ok" />
	    <ImageButton
	        android:id="@+id/imagebtn_editseatpos_cancel"
        	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:layout_marginRight="1dp"
        	android:background="@layout/selector_btn_cancel" />
    </LinearLayout>
</RelativeLayout>
