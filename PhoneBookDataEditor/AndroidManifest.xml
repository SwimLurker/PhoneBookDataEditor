<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nnit.phonebook.dataeditor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Main" >
         <activity
            android:name="com.nnit.phonebook.dataeditor.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/NoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nnit.phonebook.dataeditor.MainActivity"
            android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />
        </activity>
        <activity
            android:name="com.nnit.phonebook.dataeditor.EditPhoneBookActivity" >
            <intent-filter>
                <action android:name="com.nnit.phonebook.dataeditor.EditPhoneBookActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nnit.phonebook.dataeditor.NewPhoneBookActivity" >
            <intent-filter>
                <action android:name="com.nnit.phonebook.dataeditor.NewPhoneBookActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nnit.phonebook.dataeditor.NewMapActivity"
            android:theme="@style/DarkTheme" >
            <intent-filter>
                <action android:name="com.nnit.phonebook.dataeditor.NewMapActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nnit.phonebook.dataeditor.EditSeatPositionActivity" >
            <intent-filter>
                <action android:name="com.nnit.phonebook.dataeditor.EditSeatPositionActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
